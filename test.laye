static assert sizeof(source_location) == sizeof(i64);
struct source_location {
    i32 offset;
    i16 length;
    i16 file_id;
}

static assert sizeof(source_range) == 2 * sizeof(i64);
struct source_range {
    source_location begin;
    source_location end;
}

struct syntax_node {
    source_range range;

    variant token {
        token_kind kind;
    }
}

void main() {
    syntax_node foo;
    if (foo is not token or token { ::end_of_file }) {

    }
}

